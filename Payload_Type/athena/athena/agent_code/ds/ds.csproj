<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
	<CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
	<Configurations>Debug;Release;LocalDebugGitHub;LocalDebugHttp;LocalDebugWebsocket;LocalDebugSmb;LocalDebugDiscord</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.DirectoryServices.Protocols" Version="9.0.0" />
  </ItemGroup>
	<!-- Obfuscation Replacement Placeholder Do Not Remove -->

	<ItemGroup>
		<WindowsPlugin Include="$(TargetDir)runtimes/win/lib/net8.0/System.DirectoryServices.Protocols.dll" />
	</ItemGroup>
	<Target Name="CopyDLLs" AfterTargets="Build" Condition="'$(ThreatCheck)' != 'True' or '$(PayloadUUID)' != ''">
		<Copy SourceFiles="@(WindowsPlugin)" DestinationFolder="$(ProjectDir)..\bin\windows\" SkipUnchangedFiles="false" ContinueOnError="WarnAndContinue" />
	</Target>

	<ItemGroup Condition="'$(ThreatCheck)' != 'True'">
		<LinuxPlugin Include="$(TargetDir)runtimes/linux/lib/net8.0/System.DirectoryServices.Protocols.dll" />
	</ItemGroup>
	<Target Name="CopyDLLs" AfterTargets="Build" Condition="'$(ThreatCheck)' != 'True' or '$(PayloadUUID)' != ''">
		<Copy SourceFiles="@(LinuxPlugin)" DestinationFolder="$(ProjectDir)..\bin\linux\" SkipUnchangedFiles="false" ContinueOnError="WarnAndContinue" />
	</Target>

	<ItemGroup>
		<MacPlugin Include="$(TargetDir)runtimes/osx/lib/net8.0/System.DirectoryServices.Protocols.dll" />
	</ItemGroup>
	<Target Name="CopyDLLs" AfterTargets="Build" Condition="'$(ThreatCheck)' != 'True' or '$(PayloadUUID)' != ''">
		<Copy SourceFiles="@(MacPlugin)" DestinationFolder="$(ProjectDir)..\bin\macos\" SkipUnchangedFiles="false" ContinueOnError="WarnAndContinue" />
	</Target>
	
	
	
  <ItemGroup>
    <ProjectReference Include="..\Agent.Models\Agent.Models.csproj" />
  </ItemGroup>

</Project>
